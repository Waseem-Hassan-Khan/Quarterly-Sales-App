@model Employee



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Add New Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 m-4">
                <div class="row pb-2">
                </div>

                @*
                This line helps in displaying the validation summary.
                <div asp-validation-summary="All"></div>
                *@

                <div class="mb-3 p-1">
                    <label asp-for="FirstName" class="p-0">
                    </label>
                    <input asp-for="FirstName" type="text" class="form-control" id="firName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="LastName" class="p-0" for="order">
                    </label>
                    <input asp-for="LastName" type="text" class="form-control" id="lstName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="DOB" class="p-0" for="order"></label>
                    <input asp-for="DOB" class="form-control" id="DOB" autocomplete="off" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>


                <div class="mb-3 p-1">
                    <label asp-for="DateOfHiring" class="p-0" for="order"></label>
                    <input asp-for="DateOfHiring" class="form-control" id="DOB" autocomplete="off" />
                    <span asp-validation-for="DateOfHiring" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="ManagerName" class="p-0" for="manager"></label>
                    <select asp-for="ManagerName" class="form-control" id="manager">
                        <option value="">Select Manager</option>
                        @foreach (var manager in ViewBag.Managers)
                        {
                            <option value="@manager.Id">@manager.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="ManagerName" class="text-danger"></span>
                </div>



                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary text-center" style="width:95%" type="submit">Create</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:95%; background-color:#2097e6">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



 @section Scripts{
     @{
        <partial name="_ValidationScriptsPartial" />
      }

    <script>
        $(function () {
            $("#DOB").datepicker({
                dateFormat: "yy-mm-dd", 
                changeMonth: true,
                changeYear: true,
                yearRange: "-100:+0" 
            });
        });
    </script>

         }