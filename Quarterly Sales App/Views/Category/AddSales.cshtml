@model Sales


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Add Yearly Sale</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 m-4">
                <div class="row pb-2">
                </div>

                @*
                This line helps in displaying the validation summary.
                <div asp-validation-summary="All"></div>
                *@

                <div class="mb-3 p-1">
                    <label asp-for="Quarter" class="p-0">
                    </label>
                    <input asp-for="Quarter" type="number" class="form-control" id="qtr" />
                    <span asp-validation-for="Quarter" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="Year" class="p-0" for="order">
                    </label>
                    <input asp-for="Year" type="text" class="form-control" id="yr" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="Amount" class="p-0" for="order">
                    </label>
                    <input asp-for="Amount" type="text" class="form-control" id="amt" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3 p-1">
                    <label asp-for="EmployeeName" class="p-0" for="manager"></label>
                    <select asp-for="EmployeeName" class="form-control" id="empNm">
                        <option value="">Select Manager</option>
                        @foreach (var manager in ViewBag.Managers)
                        {
                            <option value="@manager.Id">@manager.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="EmployeeName" class="text-danger"></span>
                </div>



                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary text-center" style="width:95%" type="submit">Create</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:95%; background-color:#2097e6">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
